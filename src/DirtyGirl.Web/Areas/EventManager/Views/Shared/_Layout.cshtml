@using Kendo.Mvc.UI
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
   
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.0/themes/base/jquery-ui.css" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/Kendo/css")
        @Styles.Render("~/Content/Admin.css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/ajax")
        @Scripts.Render("~/bundles/kendo")
        @Styles.Render("~/Content/jquery.mCustomScrollbar.css")
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
        @Scripts.Render("~/Scripts/jquery.easing.1.3.js")
        @Scripts.Render("~/Scripts/jquery.mousewheel.min.js")
        @Scripts.Render("~/Scripts/jquery.tooltip.min.js")
        @Scripts.Render("~/Scripts/DirtyGirl.js")

        @RenderSection("includes", false)

        <title>@ViewBag.Title</title>

        <style>
            ul#menu li {
                display: block;

            }
        </style>
    </head>
    <body>

        <div id="fullWrapper">
            <div id="container">
                <div id="header">
                    <div id="headerContainer">
                        <div id="global_nav">
                            <div id="logoContainer">
                                <h1><a href="http://www.godirtygirl.com/">Dirty Girl</a></h1>
                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="loginStatusContainer">
                    @Html.Partial("_LoginStatus")
                </div>

                @(Html.Kendo().Menu()
                      .Name("menu") 
                      .Items(items =>
                                 {                                     
                                     items.Add().Text("Reports")
                                          .Items(item =>
                                                     {
                                                         item.Add().Text("Summary").Action("Summary", "Reporting");
                                                         item.Add().Text("Details").Action("Detailed", "Reporting");
                                                     });

                                 })
                      )

                <div id="content" style="min-height:200px; height:auto;" >
                    @RenderBody()
                </div>
            </div>
        </div>
    
        @Scripts.Render("~/Scripts/jquery.mCustomScrollbar.js")

        @RenderSection("scripts", required: false)
    </body>
</html>

